<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<LangVersion>latest</LangVersion>
		<RootNamespace>TrueMogician.Extensions.Reflection</RootNamespace>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<Authors>true_mogician</Authors>
		<Description>Some useful extension methods that focus on reflection</Description>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageId>TrueMogician.Extensions.Reflection</PackageId>
		<RepositoryUrl>https://github.com/truemogician/DotNetExtensions</RepositoryUrl>
		<Version>1.0.1</Version>
		<SignAssembly>true</SignAssembly>
		<AssemblyOriginatorKeyFile>Reflection.snk</AssemblyOriginatorKeyFile>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="TrueMogician.Exceptions" Version="1.1.1" />
		<PackageReference Include="TrueMogician.Extensions.Enumerable" Version="1.0.2" />
	</ItemGroup>

	<PropertyGroup>
		<DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
	</PropertyGroup>

	<PropertyGroup>
		<NoWarn>1701;1702;1591;1573</NoWarn>
	</PropertyGroup>

</Project>
